%section#main-content
  %header.main
    .content
      %h1= editable @category, :title, nested: :translations, nid: @category.translation.id, placement: :bottom
      = create_button Blog::Post
  #posts
    = render @posts
    = paginate @posts

.sidebar.sidebar-right
  = auto_discovery_link_tag(:atom, posts_path(:atom))
  = render_cell 'blog/category', :show, view: :accordion_menu