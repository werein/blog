= rails_admin_alert @post

=# javascript_include_tag 'ckeditor/override'
=# javascript_include_tag 'ckeditor/init'
= simple_nested_form_for @post, html: { class: 'form-horizontal' } do |f|
  = render 'core/shared/errors', object: @post

  = f.input :image
  = f.association :categories, input_html: { class: 'multiselect' }

  %header
    %h1= t '.translations.title'
    = f.link_to_add gt('plus','.translations.new'), :translations, class: 'translations btn btn-info pull-right'
  = localization_bar @post
  
  .tab-content.translations
    = f.simple_fields_for :translations, nested_wrapper: false do |t|
      .fields.tab-pane{id: "translation_#{t.index}", class: ("active" if t.index == 0)}
        = t.link_to_remove si('btn btn-danger btn-small pull-right','glyphicon glyphicon-remove')
        = t.input :title
        = t.input :slug
        = t.input :locale
        = t.input :content, as: :ckeditor
  %hr/
  = f.button :submit, t('misc.submit'), class: 'btn btn-block btn-large btn-info'